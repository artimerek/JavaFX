<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.artimerek.Controller">
    <center>
        <TableView fx:id="artistTableView" prefHeight="300.0" prefWidth="570.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="${artistTableView.width}" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <BorderPane.margin>
                <Insets right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#listArtist" text="List Artists">
               <opaqueInsets>
                  <Insets left="3.0" />
               </opaqueInsets>
            </Button>
                <Button alignment="TOP_LEFT" contentDisplay="CENTER" maxWidth="Infinity" mnemonicParsing="false" text="Update Artist" onAction="#updateArtist"/>
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#listAlbumsForArtist" text="Show Albums (artist)" />
            <Button mnemonicParsing="false" text="Add Artist" onAction="#addArtist"/>
                <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" visible="false">
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
                </ProgressBar>
            </children>
        </HBox>
    </bottom>
</BorderPane>
